            <!--android:id="@+id/locationDialogCancel"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/cancel"-->
            <!--android:layout_below="@+id/dropCard"-->
            <!--android:layout_alignStart="@+id/dropCard"-->
            <!--android:layout_alignEnd="@+id/dropCard" />-->

    </RelativeLayout>


    <ImageView
        android:id="@+id/locationAction"
        android:layout_width="@dimen/location_btn_go"
        android:layout_height="@dimen/location_btn_go"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/location_btn_margin"
        android:layout_marginEnd="@dimen/location_btn_margin"
        android:background="@drawable/btn_forbid"
        />


</RelativeLayout>